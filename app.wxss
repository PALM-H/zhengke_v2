/**app.wxss**/

page{
    height: 100%;
    background-color: #ffffff;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

/** 公用flex **/
.flexwrap{
  display: flex;
  flex-wrap:wrap;
  justify-content:space-around;
  align-items:center;
}

.hide{
  display: none;
}



/** swiper **/
.swiper-container{  
  position: relative;  
}  
.swiper{
  height: 374rpx;
}
.swiper image{
  width:100%;
  height:374rpx;
}
.swiper .textwrap{
  position: absolute;
  width: 100%;
  bottom: 46rpx;
  text-align: center;
}
.swiper .textwrap text{
  font-size: 34rpx;
  color: #ffffff;
}