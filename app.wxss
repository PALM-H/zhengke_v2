/**app.wxss**/

page{
    height: 100%;
    background-color: #ffffff;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.flexwrap{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.hide{
  display: none;
}


.swiper-container{  
  position: relative;  
}  
.swiper{
  height: 374rpx;
}
.swiper image{
  width:100%;
  height:374rpx;
}
.swiper .textwrap{
  position: absolute;
  width: 100%;
  bottom: 46rpx;
  text-align: center;
}
.swiper .textwrap text{
  font-size: 34rpx;
  color: #ffffff;
}