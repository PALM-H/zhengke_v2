
<view class="page">
  <view class="searchbar">
    <view class="searchwrap">
      <image class="icon" src="../../../images/shop/icon32.png"></image>
      <input type="text" class="word" confirm-type="search" value="{{keyword}}" bindinput="bindinput" placeholder="输入商品名进行搜索" />
      <text class="righttext" bindtap="goSearch">搜索</text>
    </view>
  </view>
  <scroll-view scroll-y style="calc(100vh-100rpx)" bindscrolltolower="scrollToLower" class="resultlist">
    <block wx:if="{{resultList.length!=0}}">
      <block wx:for="{{resultList}}" wx:key="unique">
      <view class="resultwrap flexwrap" bindtap="goDetail">
        <view class="imagewrap">
          <image src="{{item.img}}"></image>
          <view class="shadow"></view>
          <view class="textwrap">
            <text>￥{{item.sell_price}}</text>
          </view>
        </view>
        <view class="itemname">
          <text>{{item.name}}</text>
        </view>
        <view class="sales">
          <text>销量：{{item.sell_num}}</text>
        </view>
      </view>
    </block> 
    </block>
    <block wx:else>
      空空如也~
    </block>
  </scroll-view>
</view>
