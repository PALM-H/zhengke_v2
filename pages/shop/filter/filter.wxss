.filter-section{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: #fff;
  z-index: 9;
}
.filter-section .title{
  position: relative;
  width: 710rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #ebebeb;
}
.filter-section .title text{
  font-size: 25rpx;
  color: #303030;
  padding-left: 12rpx;
}
.filter-section .tablist{
  position: relative;
  width: 696rpx;
  margin: 0 auto;
}
.filter-section .tablist .tabwrap{
  position: relative;
  width: 232rpx;
  height: 100rpx;
  float: left;
  align-items: center;
  justify-content: center;
}
.filter-section .tablist .textwrap{
  position: relative;
  width: 180rpx;
  height: 52rpx;
  line-height:52rpx;
  text-align:center;
  border: 1rpx solid #c4c4c4;
  border-radius: 4rpx;
  font-size: 23rpx;
  color: #303030;
}
.filter-section .bottom{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
}
.filter-section .bottom .btnreset{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  background: #bababa;
}
.filter-section .bottom .btnok{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  background: #dc3839;
}
