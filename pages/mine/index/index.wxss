
.page{
  overflow: hidden;
  background: #f2f2f2;
  height:100vh;
}

.login-modal{
  position:absolute;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background:#fff;
  z-index:1;
  justify-content:center;
}



.top-content{
  background: #fff;
  width: 100%;
  border-bottom: 1rpx #eeeeee solid;
}
.topimg{
  width: 100%;
  height: 171rpx;
}
.headimg{
  position: absolute;
  top: 30rpx;
  width: 100%;
  text-align: center;
}
.headimg image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.nickName{
  margin-top: 68rpx;
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  color: #4a4a4a;
  text-align: center;
}

.menuwrap{
  position: relative;
  margin-top: 30rpx;
  width: 100%;
  height: 140rpx;
  border-top: 1rpx #eeeeee solid;
}
.menuwrap .item{
  position: relative;
  display: block;
  height: 80rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
  margin-top: 32rpx;
}
.menuwrap .item:not(.firstitem){
  border-left:1rpx #eee solid;
}
.menuwrap .item .itemimg{
  width: 100%;
  height: 45rpx;
}
.menuwrap .item .itemimg image{
  width: 65rpx;
  height: 45rpx;
}
.menuwrap .item .itemtext{
  width: 100%;
  height: 20rpx;
  line-height: 20rpx;
  margin-top: 13rpx;
}
.menuwrap .item .itemtext text{
  font-size: 20rpx;
  color: #6a6a6a;
}
.quick{
  position: relative;
  padding: 24rpx 0;
  height: 47rpx;
  margin: 0 auto;
}
.quick .lianxi{
  width:100%;
  padding:0;
  margin:0;
  position:absolute;
  left:0;
  background:none;
  text-align:left;
  padding-left:88rpx;
  font-size:25rpx;
  color:#6a6a6a;


}
.quick .lianxi:after{
  border: none;
}
.quick-first{
  border-top: 1rpx #eeeeee solid;
  width: 690rpx;
}
.quick-list{
  border-bottom: 1rpx #eeeeee solid;
  width: 100%;
}
.quick-item{
  position: relative;
  width: 690rpx;
  margin: 0 auto;
}
.quick .imagewrap{
  position: relative;
  display: inline-block;
  margin-left: 8rpx;
  margin-right: 28rpx; 
  width: 46rpx;
  height: 47rpx;
}
.quick .imagewrap image{
  width: 46rpx;
  height: 47rpx;
}
.quick .textwrap{
  position: relative;
  display: inline-block;
  width: 300rpx;
  height: 47rpx;
  display:flex;
  align-items: center;
}
.quick .textwrap text{
  color: #6a6a6a;
  font-size: 25rpx;
}
.quick .righttext{
  position: absolute;
  display: inline-block;
  right: 28rpx;
  height: 47rpx;
  display:flex;
  align-items: center;
}
.quick .righttext text{
  color: #bbb;
  font-size: 25rpx;
}
.quick .rightimage{
  position: absolute;
  display: inline-block;
  right: 0;
  width: 13rpx;
  height: 47rpx;
  display:flex;
  align-items: center;
}
.quick .rightimage image{
  width: 13rpx;
  height: 22rpx;
}

.quick-content{
  width: 100%;
  margin-top: 18rpx;
  border-top: 1rpx #eeeeee solid;
  background: #fff;
}