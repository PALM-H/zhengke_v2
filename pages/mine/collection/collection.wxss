
.page{
  overflow: scroll;
  background: #f2f2f2;
  height:100vh;
}

.item{
  position: relative;
  width: 720rpx;
  background: #fff;
  margin: 15rpx auto 15rpx;
  padding-top:1rpx;
}

.itemwrap{
  position: relative;
  width: 680rpx;
  height: 170rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.itemlist .itemwrap:not(:last-child){
  border-bottom: 1rpx #eeeeee solid;
}
.itemwrap .itemimg{
  position: absolute;
  left: 10rpx;
  top: 0;
  width: 169rpx;
  height: 169rpx;
}
.itemwrap .namewrap{
  position: absolute;
  left: 200rpx;
  top: 0;
  width: 472rpx;
  line-height: 36rpx;
}
.itemwrap .namewrap text{
  font-size: 24rpx;
  color: #303030;
}
.itemwrap .versionwrap{
  position: absolute;
  left: 200rpx;
  top: 90rpx;
  width: 472rpx;
  line-height:21rpx;
}
.itemwrap .versionwrap text{
  font-size: 21rpx;
  color: #bbbbbb;
}
.itemwrap .pricewrap{
  position: absolute;
  left: 200rpx;
  bottom: 30rpx;
  line-height:23rpx;
}
.itemwrap .pricewrap text{
  font-size: 23rpx;
  color: #c62626;
}
.itemwrap .countwrap{
  position: absolute;
  right: 6rpx;
  bottom: 30rpx;
  line-height:23rpx;
}
.itemwrap .countwrap text{
  font-size: 23rpx;
  color: #db3838;
}
.itemwrap .heart{
  position: absolute;
  right: 112rpx;
  bottom: 32rpx;
  width: 25rpx;
  height: 22rpx;
}