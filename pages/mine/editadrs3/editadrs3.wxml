
<view class="page">
  <view class="main">
    <view class="msgwrap flexwrap" bindtap="chooseImage">
      <text class="title">姓名</text>
      <input type="text" class="msg" placeholder="请输入姓名" value="{{name}}" bindinput="bindnameinput" />
    </view>
    <view class="msgwrap flexwrap">
      <text class="title">联系电话</text>
      <input type="number" class="msg" placeholder="请输入联系电话" value="{{tel}}" bindinput="bindtelinput"  />
    </view>
    <view class="msgwrap flexwrap">
      <text class="title">所在地区</text>
      <image class="righticon" src="../../../images/mine/right-arrow.png"></image>
      <picker class="picker" mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view>
          {{region[0]}} {{region[1]}} {{region[2]}}
        </view>
      </picker>
    </view>
    <view class="msgwrap flexwrap">
      <text class="title">详细地址</text>
      <input type="text" class="msg" placeholder="请输入详细地址" value="{{adrs}}" bindinput="bindadrsinput"/>
    </view>
    <view class="msgwrap flexwrap" bindtap="defaultChange">
      <image class="lefticon" src="../../../images/mine/pick-{{pick? 'on' : 'off'}}.png"></image>
      <text class="lefttext">设为默认地址</text>
    </view>
  </view>
  <view class="bottom" bindtap="saveAdrs">
    <text>确认</text>
  </view>
</view>
