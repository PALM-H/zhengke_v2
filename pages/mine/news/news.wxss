
.page{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
  overflow: scroll;
}

.newswrap{
  position: relative;
  width: 720rpx;
  margin: 15rpx auto 0;
  border-radius: 8rpx;
  background: #fff;
}

.page .newswrap:last-child{
  margin-bottom: 15rpx;
}

.newswrap .titlewrap{
  position: relative;
  width: 660rpx;
  height: 80rpx;
  margin: 0 auto;
  align-items: center;
  font-size: 24rpx;
  color: #303030;
}
.newswrap .titlewrap .righttext{
  position: absolute;
  right: 0;
  color: #bbbbbb;
}
.newswrap .contentwrap{
  position: relative;
  width: 680rpx;
  margin: 16rpx auto 0;
  line-height: 36rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #d8d8d8;
}
.newswrap .contentwrap text{
  display: block;
  width: 660rpx;
  margin: 0 auto;
  font-size: 24rpx;
  color: #6a6a6a;
}
.newswrap .bottomwrap{
  position: relative;
  width: 660rpx;
  height: 80rpx;
  margin: 0 auto;
  align-items: center;
  font-size: 24rpx;
  color: #bbbbbb;
}
.newswrap .bottomwrap .rightimg{
  position: absolute;
  right: 0;
  width: 13rpx;
  height: 22rpx;
}