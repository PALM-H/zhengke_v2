
.page{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
  overflow: hidden;
}

.main{
  position: relative;
  width: 720rpx;
  margin: 15rpx auto 0;
  background: #fff;
}
.main .msgwrap{
  position: relative;
  width: 680rpx;
  height: 120rpx;
  align-items: center;
  margin: 0 auto;
}
.main .msgwrap:not(:last-child){
  border-bottom: 1rpx solid #d8d8d8;
}
.main .msgwrap .title{
  display: inline-block;
  padding-left: 6rpx;
  font-size: 26rpx;
  color: #303030;
}
.main .msgwrap .righticon{
  position: absolute;
  right: 6rpx;
  width: 13rpx;
  height: 22rpx;
}
.main .msgwrap .rightimg{
  position: absolute;
  right: 54rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.main .msgwrap .name{
  position: absolute;
  left: 128rpx;
  width: 500rpx;
  height: 120rpx;
  font-size: 24rpx;
  color: #6a6a6a;
}

.bottom{
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  line-height: 90rpx;
  background: #00a7ff;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
}

