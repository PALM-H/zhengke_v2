.confirm{
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 8;
}
.confirm .black{
  width: 100%;
  height: 100vh;
  background: #000;
  opacity: 0.3;
}
.confirm .dialog{
  position: absolute;
  left: 150rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 450rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
  z-index: 9;
}
.confirm .dialog .title{
  display: block;
  width: 450rpx;
  font-size: 30rpx;
  color: #303030;
  margin-top: 58rpx;
}
.confirm .dialog .tips{
  display: block;
  width: 365rpx;
  font-size: 20rpx;
  color: #303030;
  margin: 44rpx auto 0;
}
.confirm .dialog .btn{
  width: 430rpx;
  height: 70rpx;
  margin: 20rpx auto 0;
}
.confirm .dialog .btn .btnwtap{
  height: 38rpx;
  line-height: 38rpx;
  margin: 17rpx 13rpx;
  border: 1rpx solid #d8d8d8;
  border-radius: 3rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: transparent;
  text-align: center;
  font-size: 20rpx;
}