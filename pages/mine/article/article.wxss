@import "/wxParse/wxParse.wxss";
.page{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
  overflow: scroll;
}

.newswrap{
  position: relative;
  width: 720rpx;
  margin: 15rpx auto;
  padding: 50rpx;
  box-sizing: border-box;
  background: #fff;
}
.newswrap .title{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #303030;
}
.newswrap .time{
  margin-top: 15rpx;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #bbbbbb;
}
.newswrap .content{
  width: 100%;
  margin-top: 42rpx;
  font-size: 20rpx;
  line-height: 38rpx;
  color: #6a6a6a;
  /* text-align:justify;
  text-justify:inter-ideograph; */
}
.newswrap .content image{
  width: 100%;
  margin: 20rpx 0;
}