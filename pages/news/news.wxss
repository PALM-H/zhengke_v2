/**index.wxss**/
.navbar{
  position: relative;
  width: 100%;
  height: 80rpx;
  overflow: scroll;
}
.navbar-scroll{
  height: 80rpx;
}
.navbar-item{
  display: inline-block;
  position: relative;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
}
.navbar-item text{
  font-size: 34rpx;
  color: #4a4a4a;
}
.navbar-item.active text{
  color: #0080ff;
  font-weight: bold;
}

.swiper-container{  
  position: relative;  
}  
.swiper{
  height: 374rpx;
}
.swiper image{
  width:100%;
  height:374rpx;
}
.swiper .textwrap{
  position: absolute;
  width: 100%;
  bottom: 46rpx;
  text-align: center;
}
.swiper .textwrap text{
  font-size: 34rpx;
  color: #ffffff;
}

.dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 18rpx;  
  display: flex;  
  justify-content: center;  
}  
.dots .dot{  
  margin: 0 10rpx;  
  width: 12rpx;  
  height: 12rpx;  
  background: #fff;  
  border-radius: 8rpx;  
  transition: all .6s;  
  opacity: 0.3;
}  
.dots .dot.active{  
  opacity: 1;
}  

.itemwrap{
  position: relative;
  width: 670rpx;
  margin: 0 auto;
}
.itemwrap .item{
  position: relative;
  width: 100%;
  height: 150rpx;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}
.itemwrap .item .item-container{
  position: relative;
  width: 100%;
  height: 150rpx;
}
.itemwrap .item .item-image{
  width: 200rpx;
  height: 100%;
}
.itemwrap .item .item-title{
  position: absolute;
  left: 240rpx;
  top: 0;
  width: 430rpx;
  font-size: 34rpx;
  color: #4a4a4a;
  font-weight: bold;
}
.itemwrap .item .item-user{
  position: absolute;
  left: 240rpx;
  bottom: 0;
  font-size: 26rpx;
  color: #5f5f5f;
}