/**article.wxss**/

@import "../../wxParse/wxParse.wxss";

.article-wrap{
  width: 670rpx;
  padding: 20rpx 0 50rpx;
  margin: 0 auto;
}
.title{
  width: 100%;
}
.title text,.title rich-text{
  font-size: 48rpx;
  font-weight: bold;
  color: #4a4a4a;
}
.user{
  margin-top: 22rpx;
  width: 100%;
}
.user{
  font-size: 26rpx;
  color: #5f5f5f;
}
.container{
  padding-top: 30rpx;
  font-size: 34rpx;
  line-height: 54rpx;
  color: #494949;
  text-align:justify;
  text-justify:inter-ideograph;
}
.container p{
  display:block;
  margin-bottom: 40rpx;
}
.container image{
  width: 100% !important;
  margin-bottom: 40rpx;
}

.msg{
  position: relative;
  width: 100%;
  height: 310rpx;
  padding: 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #9b9b9b;
  margin-top:30rpx;
}
.msg image{
  width: 210rpx;
  height: 210rpx;
}
.msg .name{
  position: absolute;
  left: 290rpx;
  top: 56rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}
.msg .phone{
  position: absolute;
  left: 290rpx;
  top: 110rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}
.msg .address{
  position: absolute;
  width: 344rpx;
  left: 290rpx;
  top: 160rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}
.ad-line{
  display:block;
  width: 670rpx;
  height: 25rpx;
  margin: 0 auto;
}
.ad{
  position: relative;
  width: 670rpx;
  height: 290rpx;
  padding: 40rpx 0;
  margin: 0 auto;
}
.swiper{
  height: 290rpx;
}
.swiper image{
  width:100%;
  height:290rpx;
}

.dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 58rpx;  
  display: flex;  
  justify-content: center;  
}  
.dots .dot{  
  margin: 0 10rpx;  
  width: 12rpx;  
  height: 12rpx;  
  background: #fff;  
  border-radius: 8rpx;  
  transition: all .6s;  
  opacity: 0.3;
}  
.dots .dot.active{  
  background: #ffffff;
  opacity: 1;
}  